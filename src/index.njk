<style>
.hero-plate{
  --thick: 3px;
  --alpha: 45deg;
  --frame: #383e42;
  --side:  #383e42;
  position: relative;
  margin-bottom: clamp(16px,3vw,32px);
  overflow: visible;
  filter: drop-shadow(var(--shadow-sm));
}
.hero-plate .hero-banner{
  position: relative;
  min-height: 110px;
  border: 2px solid var(--frame);
  border-radius: 0;
  background: url("{{ '/assets/background.jpg' | url }}") center/cover no-repeat;
  box-shadow: inset 0 1px 0 rgba(255,255,255,.35),
              inset 0 -1px 0 rgba(0,0,0,.20);
}
.hero-plate .hero-stack{
  display: grid;
  place-items: center;
  padding: clamp(4px, 1vw, 12px);
}
.hero-plate::before{
  content: "";
  position: absolute;
  top: 100%; left: 0;
  width: 100%; height: var(--thick);
  transform-origin: top left;
  transform: skewX(var(--alpha));
  background: #c8c8c7;
  border: 2px solid #383e42;
  border-top: none;
  box-sizing: border-box;
  z-index: 1;
}
.hero-plate::after{
  content: "";
  position: absolute;
  top: 0; left: 100%;
  width: var(--thick); height: 100%;
  transform-origin: top left;
  transform: skewY(var(--alpha));
  background: var(--side);
  border: 2px solid #383e42;
  border-left: none;
  box-sizing: border-box;
  z-index: 2;
}
.slogans { max-width: var(--logo-width, 600px); }
.slogan-left, .slogan-right { color:#383e42; text-shadow:none; }

#hero-logo.logo{
  width: clamp(220px, 40vw, 520px);
  height: auto !important;
  object-fit: contain;
  margin: 0 auto 6px;
}

.card h3{ display:flex; align-items:center; gap:.75rem; margin-top:0; }
.card-icon{
  width: 48px; height: 48px; flex: 0 0 48px;
  display: inline-block;
  color:#1b4f72;
  filter: drop-shadow(0 2px 1px rgba(0,0,0,.2));
}

@media (max-width: 760px){
  .hero-plate{ --thick: 3px; }
  #hero-logo.logo{ width: clamp(180px, 55vw, 420px); }
}
</style>

<script>
function adjustSloganSize() {
  const logo = document.getElementById("hero-logo");
  const slogans = document.getElementById("slogans");
  if (!logo || !slogans) return;
  const logoWidth = logo.offsetWidth;
  document.documentElement.style.setProperty("--logo-width", logoWidth + "px");
  let fontSize = 40, minSize = 10;
  slogans.style.setProperty("--slogan-size", fontSize + "px");
  const lines = slogans.querySelectorAll("h3");
  while (fontSize > minSize) {
    let tooWide = false;
    lines.forEach(line => { if (line.scrollWidth > logoWidth) tooWide = true; });
    if (!tooWide) break;
    fontSize -= 1;
    slogans.style.setProperty("--slogan-size", fontSize + "px");
  }
}
window.addEventListener("load", adjustSloganSize);
window.addEventListener("resize", adjustSloganSize);
</script>
