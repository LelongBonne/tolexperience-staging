<style>
.hero-plate{
  margin-bottom: clamp(16px,3vw,32px);
  filter: drop-shadow(var(--shadow-sm));
}

/* Bannière sans bordure claire */
.hero-plate .hero-banner{
  position: relative;
  min-height: 110px;
  border: none;                  /* pas de cadre clair */
  border-radius: 0;
  background: url("{{ '/assets/background.jpg' | url }}") center/cover no-repeat;
  box-shadow: inset 0 1px 0 rgba(255,255,255,.35),
              inset 0 -1px 0 rgba(0,0,0,.20);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Rectangle droit gris foncé */
.hero-plate .hero-side{
  position: absolute;
  top: 0; right: 0;
  width: 6px; height: 100%;
  background: #383e42;
  border: 2px solid #383e42; /* contour */
  border-left: none;         /* évite double trait côté bannière */
  box-sizing: border-box;
}

/* Contenu centré */
.hero-plate .hero-stack{
  display: grid;
  place-items: center;
  padding: clamp(4px, 1vw, 12px);
  flex: 1;
}

/* Slogans */
.slogans { max-width: var(--logo-width, 600px); }
.slogan-left, .slogan-right { color:#383e42; }

/* Logo — plus petit */
#hero-logo.logo{
  width: clamp(160px, 28vw, 360px);
  height: auto !important;
  object-fit: contain;
  margin: 0 auto 6px;
}

/* Icônes cartes */
.card h3{ display:flex; align-items:center; gap:.75rem; margin-top:0; }
.card-icon{
  width: 30px; height: 30px; flex: 0 0 30px;
  display: inline-block;
  color:#1b4f72;
  filter: drop-shadow(0 2px 1px rgba(0,0,0,.2));
}

@media (max-width: 760px){
  #hero-logo.logo{ width: clamp(140px, 45vw, 260px); }
}
</style>

<script>
function adjustSloganSize() {
  const logo = document.getElementById("hero-logo");
  const slogans = document.getElementById("slogans");
  if (!logo || !slogans) return;
  const logoWidth = logo.offsetWidth;
  document.documentElement.style.setProperty("--logo-width", logoWidth + "px");
  let fontSize = 40, minSize = 10;
  slogans.style.setProperty("--slogan-size", fontSize + "px");
  const lines = slogans.querySelectorAll("h3");
  while (fontSize > minSize) {
    let tooWide = false;
    lines.forEach(line => { if (line.scrollWidth > logoWidth) tooWide = true; });
    if (!tooWide) break;
    fontSize -= 1;
    slogans.style.setProperty("--slogan-size", fontSize + "px");
  }
}
window.addEventListener("load", adjustSloganSize);
window.addEventListener("resize", adjustSloganSize);
</script>
