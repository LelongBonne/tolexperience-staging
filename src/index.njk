.hero-stack {
  display: inline-block;
  text-align: center;
}

.logo {
  display: block;
  height: clamp(72px, 12vw, 150px);
  width: auto;
  margin: 0 auto 8px;
}

.slogans {
  margin: 0 auto;
  white-space: nowrap;
  max-width: var(--logo-width, 600px);
}

.slogan-left,
.slogan-right {
  margin: 4px 0;
  line-height: 1.2;
  font-family: "TOL-RV1", cursive;
  font-size: var(--slogan-size, 24px);
  color: #383e42; /* gris foncé fixe */
}

.slogan-left  { text-align: left; }
.slogan-right { text-align: right; }
</style>

<script>
function adjustSloganSize() {
  const logo = document.getElementById("hero-logo");
  const slogans = document.getElementById("slogans");
  if (!logo || !slogans) return;

  const logoWidth = logo.offsetWidth;
  document.documentElement.style.setProperty("--logo-width", logoWidth + "px");

  let fontSize = 40;   // taille max
  const minSize = 10;  // taille mini forcée
  slogans.style.setProperty("--slogan-size", fontSize + "px");

  const lines = slogans.querySelectorAll("h3");
  while (fontSize > minSize) {
    let tooWide = false;
    lines.forEach(line => {
      if (line.scrollWidth > logoWidth) tooWide = true;
    });
    if (!tooWide) break;
    fontSize -= 1;
    slogans.style.setProperty("--slogan-size", fontSize + "px");
  }
}
window.addEventListener("load", adjustSloganSize);
window.addEventListener("resize", adjustSloganSize);
</script>
